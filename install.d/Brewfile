brew 'gnutls', args: ["--with-default-names"]
brew 'go'
brew 'dep'
brew 'grep', args: ["--with-default-names"]
brew 'gzip'
brew 'htop'
brew 'screen'
brew 'tree'
brew 'watch'
brew 'wdiff', args: ["--with-gettext"]
brew 'wget'

# OS X ships a GNU version, but too old
