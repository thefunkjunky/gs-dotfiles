tap 'caskroom/versions'
# tap 'homebrew/versions'
tap 'homebrew/services'
# tap 'homebrew/dupes'

# Replace OSX binaries with GNU binaries.
brew 'coreutils'
brew 'binutils'
brew 'binutils'
brew 'diffutils'
